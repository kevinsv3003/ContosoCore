@model ContosoCore.Models.Entities.Student
@{
    ViewData["Title"] = "Create";
}

<h2>Editar</h2>

<h4>Estudiante</h4>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id"  />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input type="text" asp-for="LastName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="FirstMidName" class="control-label"></label>
                <input type="text" asp-for="FirstMidName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="EmrollmentDate" class="control-label"></label>
                <input type="date" asp-for="EmrollmentDate" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Modificar Estudiante" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="glyphicon glyphicon-log-out"></i>       Ver Listado</a>
</div>
