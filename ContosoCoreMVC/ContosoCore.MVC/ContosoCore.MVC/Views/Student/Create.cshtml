@model ContosoCore.Models.Entities.Student
@{
    ViewData["Title"] = "Create";
}

<h2>Crear</h2>

<h4>Estudiante</h4>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input type="text" asp-for="LastName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="FirstMidName" class="control-label"></label>
                <input type="text" asp-for="FirstMidName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="EmrollmentDate" class="control-label"></label>
                <input type="date" asp-for="EmrollmentDate" class="form-control" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success"> <i class="glyphicon glyphicon-floppy-save"></i> Crear Estudiante</button>                
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="glyphicon glyphicon-log-out"></i>       Ver Listado</a>
</div>
