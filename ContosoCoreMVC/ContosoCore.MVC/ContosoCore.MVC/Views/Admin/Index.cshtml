@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary col-md-12 text-white">
    <h4>
        Cuentas de Usuarios
    </h4>

    <div class="text-center" asp-validation-summary="ModelOnly"></div>

    <table class="table table-bordered table-sm">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">
                    No hay cuentas de usuarios
                </td>
            </tr>
        }
        else
        {
            foreach (AppUser item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>
                        <form asp-action="Delete" method="post" asp-route-id="@item.Id">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="glyphicon glyphicon-edit"></i>
                                Editar
                            </a>
                            <button type="submit" class="btn btn-sm btn-primary">
                            <i class="glyphicon glyphicon-floppy-remove"></i>
                            Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <a class="btn btn-primary" style="margin-bottom:10px" asp-action="Create">
        <i class="glyphicon glyphicon-log-out"></i>
        Registrar Usuarios
    </a>

</div>